<Window x:Class="soundboard.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:soundboard"
        mc:Ignorable="d"
        Title="Info" Height="200" Width="600">
    <Canvas Background="#FF8BA5B8">
        <TextBlock Canvas.Left="34" Canvas.Top="34" FontSize="20">
            To add new sounds to your soundboard, just paste your
            <LineBreak/>
            mp3-files in the mp3-files directory or select a different
            <LineBreak/>
            directory with the *select File-Folder* button.
        </TextBlock>


    </Canvas>
</Window>
